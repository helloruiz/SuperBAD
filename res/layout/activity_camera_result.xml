<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraResult" >

    <ImageView
        android:id="@+id/camera_picture"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:contentDescription="@string/desc_music_cover"
        android:padding="10dp"
        android:src="@drawable/camera_lens" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/camera_result_text_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_xlarge" />

        <TextView
            android:id="@+id/camera_result_text_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>