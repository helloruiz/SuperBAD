<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentTest" >
    
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="2dp"
        android:text="@string/section_questions"
        android:textColor="@color/white"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/yellow" />
    
    <fragment
        android:id="@+id/the_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="com.helloruiz.superbad.frag.FragmentList" />

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:padding="2dp"
        android:text="@string/section_answer"
        android:textColor="@color/white"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/green" />

    <fragment
        android:id="@+id/the_article_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="com.helloruiz.superbad.frag.FragmentArticle" />

</LinearLayout>